{
  "variables": {
    "aws_access_key": "{{env ´AWS_ACCESS_KEY´}}",
    "aws_secret_key": "{{env ´AWS_SECRET_KEY´}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-04505e74c0741db8d",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "MEAN_STACK_AWS-{{isotime | clean_resource_name}}",
      "ssh_timeout": "2m",
      "run_tags": {
        "Name": "app-server-packer"
      },
      "tags": {
        "Name": "appserver"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "hello.js",
      "destination": "/tmp/hello.js"
    },
    {
      "type": "file",
      "source": "node",
      "destination": "/tmp/node"
    },
    {
      "type": "shell",
      "scripts": "shell.sh"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "output.json"
    }
  ]
}
